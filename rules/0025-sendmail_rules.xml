<group name="syslog,sendmail,">
  <rule id="3100" level="0">
    <decoded_as>sendmail-reject</decoded_as>
    <description>sendmail 规则组</description>
  </rule>

  <rule id="3101" level="0" noalert="1">
    <if_sid>3100</if_sid>
    <match>reject=</match>
    <description>sendmail 拒信规则组</description>
  </rule>

  <rule id="3102" level="5">
    <if_sid>3101</if_sid>
    <match>reject=451 4.1.8 </match>
    <description>sendmail: 无有效的的发件域名 </description>
    <description>MX 记录 (请求操作终止).</description>
    <mitre>
      <id>T1114</id>
    </mitre>
    <group>spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3103" level="6">
    <if_sid>3101</if_sid>
    <match>reject=550 5.0.0 |reject=553 5.3.0</match>
    <description>sendmail: 被访问列表拒绝 </description>
    <description>(55x: 请求的操作未被执行).</description>
    <mitre>
      <id>T1114</id>
    </mitre>
    <group>spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3104" level="6">
    <if_sid>3101</if_sid>
    <match>reject=550 5.7.1 </match>
    <description>sendmail: 尝试将邮件服务器用作中继服务器 </description>
    <description>(550: 请求的操作未被执行).</description>
    <mitre>
      <id>T1114</id>
    </mitre>
    <group>spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3105" level="5">
    <if_sid>3101</if_sid>
    <match>reject=553 5.1.8 </match>
    <description>sendmail: 找不到发件域名</description>
    <description> (553: 请求的操作未被执行).</description>
    <mitre>
      <id>T1114</id>
    </mitre>
    <group>spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3106" level="5">
    <if_sid>3101</if_sid>
    <match>reject=553 5.5.4 </match>
    <description>sendmail: 没有发件地址的域名</description>
    <description>(553: 请求的操作未被执行).</description>
    <mitre>
      <id>T1114</id>
    </mitre>
    <group>spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3107" level="4">
    <if_sid>3101</if_sid>
    <description>sendmail: Sendmail 退回消息</description>
  </rule>

  <rule id="3108" level="6">
    <if_sid>3100</if_sid>
    <match>rejecting commands from</match>
    <description>sendmail: 由于GreetPause配置，Sendmail 已拒绝</description>
    <mitre>
      <id>T1114</id>
    </mitre>
    <group>spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3109" level="8">
    <if_sid>3100</if_sid>
    <match>savemail panic</match>
    <description>sendmail: Sendmail 报错邮件错误</description>
    <group>system_error,gdpr_IV_35.7.d,</group>
  </rule>

  <rule id="3151" level="10" frequency="8" timeframe="120">
    <if_matched_sid>3102</if_matched_sid>
    <same_source_ip />
    <description> 发件人域名有伪造的 MX 记录</description>
    <description>它不应发送邮件</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3152" level="6" frequency="8" timeframe="120">
    <if_matched_sid>3103</if_matched_sid>
    <same_source_ip />
    <description>sendmail: 多次尝试从先前被拒绝的发件人发送电子邮件</description>
    <description>previously rejected sender (access).</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3153" level="6" frequency="8" timeframe="120">
    <if_matched_sid>3104</if_matched_sid>
    <same_source_ip />
    <description>sendmail: 垃圾邮件多次中继尝试</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3154" level="10" frequency="8" timeframe="120">
    <if_matched_sid>3105</if_matched_sid>
    <same_source_ip />
    <description>sendmail: 多次尝试从无效/未知的发件人域名发送电子邮件</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3155" level="10" frequency="8" timeframe="120">
    <if_matched_sid>3106</if_matched_sid>
    <same_source_ip />
    <description>sendmail: 多次尝试从无效/未知的发件人域名发送电子邮件</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3156" level="10" frequency="12" timeframe="120">
    <if_matched_sid>3107</if_matched_sid>
    <same_source_ip />
    <description>sendmail: 来自同一来源IP的多次被拒绝的邮件</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>

  <rule id="3158" level="10" frequency="8" timeframe="120">
    <if_matched_sid>3108</if_matched_sid>
    <same_source_ip />
    <description>sendmail: 多次 pre-greetings 拒绝</description>
    <mitre>
      <id>T1114</id>
      <id>T1499</id>
    </mitre>
    <group>multiple_spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
  </rule>


   <!-- Rules for SMF-SAV -->
   <rule id="3190" level="0">
     <decoded_as>smf-sav-reject</decoded_as>
     <description>the smf-sav sendmail milter 规则组</description>
     <group>smf-sav,</group>
   </rule>

   <rule id="3191" level="6">
     <if_sid>3190</if_sid>
     <match>^sender check failed|^sender check tempfailed</match>
     <description>sendmail: SMF-SAV sendmail milter 无法验证</description>
     <description>地址(已拒绝)</description>
     <mitre>
       <id>T1114</id>
     </mitre>
     <group>smf-sav,spam,pci_dss_11.4,gdpr_IV_35.7.d,nist_800_53_SI.4,tsc_CC6.1,tsc_CC6.8,tsc_CC7.2,tsc_CC7.3,</group>
   </rule>

</group>
